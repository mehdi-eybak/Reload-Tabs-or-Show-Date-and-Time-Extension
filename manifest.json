{
  "manifest_version": 3,
  "name": "Reload All Tabs And Show Time",
  "version": "1.1",
  "description": "Reload all tabs or show current date and time with a single click",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "incognito": "spanning"
}
